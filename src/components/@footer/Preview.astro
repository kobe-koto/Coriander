<div class="Previews">
    <h1>Previews</h1>
    <div>
        <div class="PreviewBG">
            <span class="PreviewBlock__White"></span>
        </div>
        As background (White block)
    </div>
    <div>
        <div class="PreviewBG">
            <span class="PreviewBlock__Black"></span>
        </div>
        As background (Black block)
    </div>
    <div>
        <div class="PreviewBG__White">
            <span class="PreviewBlock"></span>
        </div>
        As block (White Background)
    </div>
    <div>
        <div class="PreviewBG__Black">
            <span class="PreviewBlock"></span>
        </div>
        As block (Black Background)
    </div>
</div>

<style lang="scss">
    div.Previews {
        > div {
            display: inline-block;
            width: 45%;
            margin: 0 1.5%;
            margin-bottom: 24px;
            > .PreviewBG {
                padding: 16px 12px;

                border-radius: 6px;
                border-style: solid;
                border-width: 1px;
                border-color: #808080;

                background-image: linear-gradient(45deg, #91e9c3, #eaaa8e);

                &__White {
                    @extend .PreviewBG;
                    background-image: none;
                    background-color: #f8f8ff;
                }
                &__Black {
                    @extend .PreviewBG;
                    background-image: none;
                    background-color: #1f1f1f;
                }   

                > .PreviewBlock {
                    display: inline-block;
                    border-radius: 10px;
                    height: 16px;
                    width: 75%;
                    max-width: 320px;
                    box-shadow: 1px 1px 10px 0px #4a4a4a;

                    background-image: linear-gradient(45deg, #91e9c3, #eaaa8e);

                    &__White {
                        @extend .PreviewBlock;
                        background-image: none;
                        background-color: #f8f8ff;
                    }
                    &__Black {
                        @extend .PreviewBlock;
                        background-image: none;
                        background-color: #1f1f1f;
                    }

                }
            }
        }
    }
</style>


<script lang="javascript">
    document.addEventListener("RGP_NewGradients", function () {
        let LinearGradient = RGP.Current.LinearGradient,
            Targets = [...document.querySelectorAll(".PreviewBG"), ...document.querySelectorAll(".PreviewBlock")];
        for ( let i=0; i<Targets.length; i++ ) {
            Targets[i].style.backgroundImage = LinearGradient;
        }
    })
</script>
