---
import { Icon } from "astro-icon/components";
import "@styles/components/coriander-generator.scss";
---

<coriander-generator>
    <h1>Coriander</h1>
    <h3>Yet another *random* gradients picker.</h3>
    <div class="code">
        <code>background-image: linear-gradient(45deg, #164eac, #2f6d2e);</code>
        <button data-role="copy"><Icon name="iconoir:copy" /></button>
        <button data-role="add-favo"><Icon name="iconoir:star-solid" /></button>
    </div>
    <button data-role="generate"><Icon name="iconoir:play-solid" />&nbsp;Generate</button>
</coriander-generator>

<script src="@scripts/components/coriander-generator"></script>
